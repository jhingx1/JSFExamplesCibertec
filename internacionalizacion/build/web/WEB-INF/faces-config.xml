<?xml version='1.0' encoding='UTF-8'?>
<faces-config version="2.0"
              xmlns="http://java.sun.com/xml/ns/javaee"
              xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
              xsi:schemaLocation="http://java.sun.com/xml/ns/javaee
http://java.sun.com/xml/ns/javaee/web-facesconfig_2_0.xsd">
    <application>
        <!-- Referencia a un propetis con el nombre etiquetas-->
        <!-- Este es el nombre del paquete y el archivo propetis con nombre etiquetas-->
        <message-bundle>msg.etiquetas</message-bundle>
        <locale-config>
            <!-- definir los idiomas-->
            <default-locale>es</default-locale>
            <supported-locale>en</supported-locale>
            <supported-locale>it</supported-locale>
        </locale-config>
        
        <resource-bundle>
            <base-name>msg.etiquetas</base-name>
           <!-- Variable a usarse en las vistas-->
            <var>eti</var><!-- Colocar pora llamar al idioma-->
            
        </resource-bundle>
        
    </application>
</faces-config>